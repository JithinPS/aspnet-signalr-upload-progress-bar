@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Upload Iframe</title>
    
    <link rel="stylesheet" href="/Content/Styles/style_main.css" />
    
    <script src="/Scripts/jquery-1.7.2.min.js" type="text/javascript"></script>
    <script src="/Scripts/App/UI.js" type="text/javascript"></script>
    
    <style type="text/css">
        
        body {
            
            background-color: #efefef;
        }
    </style>
</head>
<body>
    <div id="uploadFormContainer">
        
        <form id="fileUploadForm" method="post" enctype="multipart/form-data" action="@(Request["srConnId"]).upl">
            
            <input id="uploadFile" name="uploadFile" value="" size="70" type="file" class="fileUpload" />
    
            <input type="hidden" id="signalRConnectionId" name="signalRConnectionId" value="@Request["srConnId"]" />
    
            <input type="hidden" id="dummyParam" name="dummyParam" value="Dummy param value" />
            
            <div id="uploadBtnContainer">
                <button id="uploadFileBtn" type="submit" onclick="disableUploadForm();">Upload File</button>
            </div>

        </form>
        
    </div>
    <div id="waitMessageContainer" style="display: none;">
        
        <span>Uploading...</span>

    </div>
    
    <script type="text/javascript">

        function disableUploadForm() {

            $('#waitMessageContainer').show();
            $('#uploadFormContainer').hide();

            return true;
        }

    </script>
</body>
</html>

